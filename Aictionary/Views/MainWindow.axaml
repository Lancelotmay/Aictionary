<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Aictionary.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:iconPacks="clr-namespace:IconPacks.Avalonia;assembly=IconPacks.Avalonia"
        xmlns:lucide="https://github.com/MahApps/IconPacks.Avalonia"
        xmlns:behaviors="using:Aictionary.Behaviors"
        xmlns:converters="using:Aictionary.Converters"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
        x:Class="Aictionary.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Aictionary - AI Dictionary"
        Width="900" Height="700">

    <Window.Resources>
        <converters:FormNameConverter x:Key="FormNameConverter"/>
    </Window.Resources>

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid Margin="20" RowDefinitions="Auto,*">
        <!-- Search Section -->
        <StackPanel Grid.Row="0" Spacing="10">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Grid.Column="0" Text="Aictionary" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                <Button Grid.Column="1"
                        Command="{Binding OpenSettingsCommand}"
                        Padding="10"
                        ToolTip.Tip="Settings"
                        Background="Transparent"
                        BorderThickness="0">
                    <lucide:PackIconLucide Kind="Settings" Width="24" Height="24" />
                </Button>
            </Grid>
            <Grid ColumnDefinitions="*,Auto">
                <TextBox Grid.Column="0"
                         Text="{Binding SearchText}"
                         Watermark="Enter a word to search..."
                         FontSize="16"
                         Padding="10">
                    <TextBox.KeyBindings>
                        <KeyBinding Command="{Binding SearchCommand}" Gesture="Enter" />
                    </TextBox.KeyBindings>
                </TextBox>
                <Button Grid.Column="1"
                        Content="Search"
                        Command="{Binding SearchCommand}"
                        Margin="10,0,0,0"
                        Padding="20,10"
                        FontSize="16"/>
            </Grid>

            <!-- Loading Indicator -->
            <ProgressBar IsIndeterminate="True" IsVisible="{Binding IsLoading}" Height="4"/>

            <!-- Error Message -->
            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Definition Display -->
        <ScrollViewer Grid.Row="1" Margin="0,20,0,0" IsVisible="{Binding CurrentDefinition, Converter={x:Static ObjectConverters.IsNotNull}}">
            <StackPanel Spacing="15">
                <!-- Word and Pronunciation -->
                <StackPanel>
                    <SelectableTextBlock Text="{Binding CurrentDefinition.Word}" FontSize="32" FontWeight="Bold"/>
                    <SelectableTextBlock Text="{Binding CurrentDefinition.Pronunciation}" FontSize="18" Foreground="Gray"/>
                    <SelectableTextBlock Text="{Binding CurrentDefinition.ConciseDefinition}"
                                         FontSize="16"
                                         Margin="0,5,0,0"
                                         TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Word Forms -->
                <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" CornerRadius="5"
                        IsVisible="{Binding CurrentDefinition.Forms.Count}">
                    <StackPanel Spacing="5">
                        <TextBlock Text="Word Forms" FontSize="18" FontWeight="SemiBold"/>
                        <ItemsControl ItemsSource="{Binding CurrentDefinition.Forms}" Margin="10,5,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <SelectableTextBlock Margin="0,3">
                                        <Run Text="{Binding Key, Converter={StaticResource FormNameConverter}, Mode=OneWay}" FontWeight="SemiBold"/>
                                        <Run Text=": "/>
                                        <Run Text="{Binding Value, Mode=OneWay}"/>
                                    </SelectableTextBlock>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Definitions -->
                <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" CornerRadius="5">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Definitions" FontSize="18" FontWeight="SemiBold"/>
                        <ItemsControl ItemsSource="{Binding CurrentDefinition.Definitions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="10,10,10,15" Margin="0,5">
                                        <StackPanel Spacing="5">
                                            <SelectableTextBlock Text="{Binding Pos}" FontWeight="SemiBold" FontStyle="Italic" Foreground="DarkBlue"/>
                                            <SelectableTextBlock TextWrapping="Wrap">
                                                <Run Text="English: " FontWeight="SemiBold"/>
                                                <Run Text="{Binding ExplanationEn}"/>
                                            </SelectableTextBlock>
                                            <SelectableTextBlock TextWrapping="Wrap">
                                                <Run Text="中文: " FontWeight="SemiBold"/>
                                                <Run Text="{Binding ExplanationCn}"/>
                                            </SelectableTextBlock>
                                            <SelectableTextBlock TextWrapping="Wrap" Margin="10,5,0,0">
                                                <Run Text="Example: " FontWeight="SemiBold" FontStyle="Italic"/>
                                                <Run Text="{Binding ExampleEn}" FontStyle="Italic"/>
                                            </SelectableTextBlock>
                                            <SelectableTextBlock TextWrapping="Wrap" Margin="10,0,0,0">
                                                <Run Text="例句: " FontWeight="SemiBold" FontStyle="Italic"/>
                                                <Run Text="{Binding ExampleCn}" FontStyle="Italic"/>
                                            </SelectableTextBlock>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Comparisons -->
                <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" CornerRadius="5"
                        IsVisible="{Binding CurrentDefinition.Comparison.Count}">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Similar Words Comparison" FontSize="18" FontWeight="SemiBold"/>
                        <ItemsControl ItemsSource="{Binding CurrentDefinition.Comparison}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="10" Margin="0,5">
                                        <StackPanel Spacing="5">
                                            <SelectableTextBlock Text="{Binding WordToCompare}"
                                                                 FontWeight="SemiBold"
                                                                 FontSize="16"
                                                                 Foreground="DarkGreen"
                                                                 behaviors:WordJumpBehavior.IsEnabled="True"/>
                                            <SelectableTextBlock Text="{Binding Analysis}"
                                                                 TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
