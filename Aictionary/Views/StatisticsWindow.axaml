<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Aictionary.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lucide="https://github.com/MahApps/IconPacks.Avalonia"
        mc:Ignorable="d"
        d:DesignWidth="800"
        d:DesignHeight="600"
        x:Class="Aictionary.Views.StatisticsWindow"
        x:DataType="vm:StatisticsViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Query Statistics"
        Width="800"
        Height="600">

    <Window.Resources>
        <DataTemplate x:Key="StatisticsGroupTemplate"
                      x:DataType="vm:StatisticsGroupItemViewModel">
            <Border BorderBrush="LightGray"
                    BorderThickness="1"
                    CornerRadius="6"
                    Margin="0,0,0,12"
                    Padding="12">
                <StackPanel Spacing="8">
                    <TextBlock Text="{Binding Label}"
                               FontSize="18"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding TotalQueries, StringFormat='Total queries: {0}'}"
                               Foreground="Gray"/>
                    <ItemsControl ItemsSource="{Binding WordCounts}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="vm:StatisticsWordCountViewModel">
                                <Grid ColumnDefinitions="*,Auto,Auto"
                                      Margin="0,4,0,4">
                                    <TextBlock Text="{Binding Word}"
                                               FontSize="16"/>
                                    <StackPanel Grid.Column="1"
                                                HorizontalAlignment="Right"
                                                Spacing="2"
                                                Margin="0,0,8,0">
                                        <TextBlock Text="{Binding Count, StringFormat='Ã—{0}'}"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding LastQueriedAtLocal, StringFormat='Last: {0:g}'}"
                                                   Foreground="Gray"/>
                                    </StackPanel>
                                    <Button Grid.Column="2"
                                            Click="DeleteWordButton_Click"
                                            Tag="{Binding Word}"
                                            ToolTip.Tip="Delete this word from history"
                                            Padding="6"
                                            Background="Transparent"
                                            BorderThickness="0">
                                        <lucide:PackIconLucide Kind="Trash2" Width="16" Height="16" Foreground="Gray" />
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid Margin="20"
          RowDefinitions="Auto,Auto,*">
        <Grid ColumnDefinitions="*,Auto">
            <TextBlock Text="Historical Queries"
                       FontSize="24"
                       FontWeight="Bold"/>
            <Button Grid.Column="1"
                    Click="ExportButton_Click"
                    ToolTip.Tip="Export all words to TXT file"
                    Padding="10"
                    Background="Transparent"
                    BorderThickness="0">
                <lucide:PackIconLucide Kind="Download" Width="24" Height="24" />
            </Button>
        </Grid>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Spacing="10"
                    Margin="0,8,0,0"
                    VerticalAlignment="Center">
            <ProgressBar IsIndeterminate="True"
                         Width="120"
                         Height="4"
                         IsVisible="{Binding IsLoading}"/>
            <TextBlock Text="{Binding EmptyMessage}"
                       Foreground="Gray"
                       IsVisible="{Binding EmptyMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
        </StackPanel>

        <TabControl Grid.Row="2"
                    Margin="0,10,0,0">
            <TabItem Header="Daily">
                <ScrollViewer>
                    <ItemsControl ItemsSource="{Binding DailyGroups}"
                                  ItemTemplate="{StaticResource StatisticsGroupTemplate}"/>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Weekly">
                <ScrollViewer>
                    <ItemsControl ItemsSource="{Binding WeeklyGroups}">
                        <ItemsControl.ItemTemplate>
                            <StaticResource ResourceKey="StatisticsGroupTemplate"/>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Monthly">
                <ScrollViewer>
                    <ItemsControl ItemsSource="{Binding MonthlyGroups}">
                        <ItemsControl.ItemTemplate>
                            <StaticResource ResourceKey="StatisticsGroupTemplate"/>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Yearly">
                <ScrollViewer>
                    <ItemsControl ItemsSource="{Binding YearlyGroups}">
                        <ItemsControl.ItemTemplate>
                            <StaticResource ResourceKey="StatisticsGroupTemplate"/>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
