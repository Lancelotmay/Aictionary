<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Aictionary.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="600"
        x:Class="Aictionary.Views.SettingsWindow"
        x:DataType="vm:SettingsViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Settings"
        Width="700" Height="600">

    <Design.DataContext>
        <vm:SettingsViewModel/>
    </Design.DataContext>

    <Grid Margin="20" RowDefinitions="Auto,*,Auto">
        <TextBlock Grid.Row="0" Text="Settings" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="20">
                <!-- API Provider Settings -->
                <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" CornerRadius="5">
                    <StackPanel Spacing="10">
                        <TextBlock Text="API Provider" FontSize="18" FontWeight="SemiBold"/>

                        <StackPanel Spacing="5">
                            <TextBlock Text="Base URL" FontWeight="SemiBold"/>
                            <TextBox Text="{Binding ApiBaseUrl}"
                                     Watermark="https://api.openai.com/v1"/>
                        </StackPanel>

                        <StackPanel Spacing="5">
                            <TextBlock Text="API Key" FontWeight="SemiBold"/>
                            <TextBox Text="{Binding ApiKey}"
                                     Watermark="sk-..."
                                     PasswordChar="*"/>
                        </StackPanel>

                        <StackPanel Spacing="5">
                            <TextBlock Text="Model" FontWeight="SemiBold"/>
                            <TextBox Text="{Binding Model}"
                                     Watermark="gpt-4o-mini"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Dictionary Management -->
                <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" CornerRadius="5">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Dictionary Management" FontSize="18" FontWeight="SemiBold"/>

                        <StackPanel Spacing="5">
                            <TextBlock Text="Dictionary Path" FontWeight="SemiBold"/>
                            <Grid ColumnDefinitions="*,Auto,Auto,Auto">
                                <TextBox Grid.Column="0"
                                         Text="{Binding DictionaryPath}"
                                         Watermark="Path to dictionary folder"/>
                                <Button Grid.Column="1"
                                        Content="Browse"
                                        Click="BrowseDictionaryButton_Click"
                                        Margin="10,0,0,0"
                                        Padding="15,5"/>
                                <Button Grid.Column="2"
                                        Content="Open"
                                        Click="OpenDictionaryButton_Click"
                                        Margin="5,0,0,0"
                                        Padding="15,5"/>
                                <Button Grid.Column="3"
                                        Content="Reset"
                                        Click="ResetDictionaryButton_Click"
                                        Margin="5,0,0,0"
                                        Padding="15,5"/>
                            </Grid>
                        </StackPanel>

                        <Button Content="Download Dictionary"
                                Command="{Binding DownloadDictionaryCommand}"
                                Padding="15,8"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- Keyboard Shortcuts -->
                <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" CornerRadius="5">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Keyboard Shortcuts" FontSize="18" FontWeight="SemiBold"/>
                        <TextBlock Text="Coming soon..." FontStyle="Italic" Foreground="Gray"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Bottom Section -->
        <StackPanel Grid.Row="2" Spacing="10" Margin="0,20,0,0">
            <TextBlock Text="{Binding StatusMessage}"
                       Foreground="Green"
                       IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
