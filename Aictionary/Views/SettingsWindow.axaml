<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Aictionary.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="600"
        x:Class="Aictionary.Views.SettingsWindow"
        x:DataType="vm:SettingsViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Settings"
        Width="700" Height="600">

    <Design.DataContext>
        <vm:SettingsViewModel/>
    </Design.DataContext>

    <Grid Margin="20" RowDefinitions="Auto,*,Auto">

        <TabControl Grid.Row="1">
            <!-- API Provider Tab -->
            <TabItem Header="API Provider">
                <ScrollViewer>
                    <StackPanel Spacing="15" Margin="15">
                        <StackPanel Spacing="5">
                            <TextBlock Text="Base URL" FontWeight="SemiBold"/>
                            <TextBox Text="{Binding ApiBaseUrl}"
                                     Watermark="https://api.openai.com/v1"/>
                        </StackPanel>

                        <StackPanel Spacing="5">
                            <TextBlock Text="API Key" FontWeight="SemiBold"/>
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBox Grid.Column="0"
                                         Text="{Binding ApiKey}"
                                         Watermark="sk-..."
                                         PasswordChar="*"
                                         IsVisible="{Binding !IsApiKeyVisible}"/>
                                <TextBox Grid.Column="0"
                                         Text="{Binding ApiKey}"
                                         Watermark="sk-..."
                                         IsVisible="{Binding IsApiKeyVisible}"/>
                                <Button Grid.Column="1"
                                        Command="{Binding ToggleApiKeyVisibilityCommand}"
                                        Content="{Binding ApiKeyToggleButtonText}"
                                        Margin="5,0,0,0"/>
                            </Grid>
                        </StackPanel>

                        <StackPanel Spacing="5">
                            <TextBlock Text="Model" FontWeight="SemiBold"/>
                            <ComboBox ItemsSource="{Binding AvailableModels}"
                                      SelectedItem="{Binding Model, Mode=TwoWay}"
                                      IsEnabled="{Binding !IsLoadingModels}"
                                      HorizontalAlignment="Stretch"
                                      Margin="0,5,0,0">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <Button Command="{Binding RefreshModelsCommand}"
                                    HorizontalAlignment="Right"
                                    Content="Refresh Models"
                                    IsEnabled="{Binding !IsLoadingModels}"
                                    Margin="0,5,0,0"/>
                            <ProgressBar IsIndeterminate="True"
                                         HorizontalAlignment="Stretch"
                                         IsVisible="{Binding IsLoadingModels}"
                                         Height="4"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Dictionary Tab -->
            <TabItem Header="Dictionary">
                <ScrollViewer>
                    <StackPanel Spacing="15" Margin="15">
                        <StackPanel Spacing="5">
                            <TextBlock Text="Dictionary Path" FontWeight="SemiBold"/>
                            <Grid ColumnDefinitions="*,Auto,Auto,Auto">
                                <TextBox Grid.Column="0"
                                         Text="{Binding DictionaryPath}"
                                         Watermark="Path to dictionary folder"/>
                                <Button Grid.Column="1"
                                        Content="Browse"
                                        Click="BrowseDictionaryButton_Click"
                                        Margin="10,0,0,0"
                                        Padding="15,5"/>
                                <Button Grid.Column="2"
                                        Content="Open"
                                        Click="OpenDictionaryButton_Click"
                                        Margin="5,0,0,0"
                                        Padding="15,5"/>
                                <Button Grid.Column="3"
                                        Content="Reset"
                                        Click="ResetDictionaryButton_Click"
                                        Margin="5,0,0,0"
                                        Padding="15,5"/>
                            </Grid>
                        </StackPanel>

                        <Button Content="Download Dictionary"
                                Command="{Binding DownloadDictionaryCommand}"
                                Padding="15,8"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Keyboard Tab -->
            <TabItem Header="Keyboard">
                <ScrollViewer>
                    <StackPanel Spacing="15" Margin="15">
                        <TextBlock Text="Keyboard shortcuts configuration" FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock Text="Coming soon..." FontStyle="Italic" Foreground="Gray"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- About Tab -->
            <TabItem Header="About">
                <ScrollViewer>
                    <StackPanel Spacing="15" Margin="15">
                        <TextBlock Text="Aictionary" FontSize="20" FontWeight="Bold"/>
                        <TextBlock Text="AI-powered dictionary application" FontSize="14" Foreground="Gray"/>

                        <Border BorderBrush="LightGray" BorderThickness="0,1,0,0" Margin="0,10,0,0" Padding="0,10,0,0">
                            <StackPanel Spacing="10">
                                <TextBlock Text="Version" FontWeight="SemiBold"/>
                                <TextBlock Text="1.0.0" Foreground="Gray"/>

                                <TextBlock Text="Description" FontWeight="SemiBold" Margin="0,10,0,0"/>
                                <TextBlock Text="An intelligent dictionary application that combines local dictionary cache with AI-powered definitions using OpenAI's API."
                                           TextWrapping="Wrap"
                                           Foreground="Gray"/>

                                <TextBlock Text="Features" FontWeight="SemiBold" Margin="0,10,0,0"/>
                                <StackPanel Spacing="3" Margin="10,0,0,0">
                                    <TextBlock Text="• Local dictionary caching" Foreground="Gray"/>
                                    <TextBlock Text="• AI-powered word definitions" Foreground="Gray"/>
                                    <TextBlock Text="• Multiple language support" Foreground="Gray"/>
                                    <TextBlock Text="• Cross-platform compatibility" Foreground="Gray"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Bottom Section -->
        <StackPanel Grid.Row="2" Spacing="10" Margin="0,20,0,0">
            <TextBlock Text="{Binding StatusMessage}"
                       Foreground="Green"
                       IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
